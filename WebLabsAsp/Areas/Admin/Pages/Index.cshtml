@page
@model WebLabsAsp.Areas.Admin.Pages.Index

<div class="scaffold">
    <div class="row">
        <div class="card-group" style="justify-content: center">
            <div class="card m-2 p-1 col-4" style="max-width: 300px; max-height: 400px; width: 300px; height: 400px">
                <img src="~/images/car.png"
                     onerror="this.onerror=null; this.src='@Url.Content("~/images/avatar.jpg")'"
                     alt='image'
                     class="card-img" style="min-width: 300px; min-height: 300px; max-width: 300px; max-height: 300px; width: 300px; height: 300px"/>
                <div class="card-body">
                    <h5 class="card-title" style="color: black">
                        Cars
                    </h5>

                    <a asp-action="Index"
                       asp-controller="Car"
                       class="btn btn-outline-info">
                        More
                    </a>
                </div>
            </div>

            <div class="card m-2 p-1 col-4" style="max-width: 300px; max-height: 400px; width: 300px; height: 400px">
                <img src="~/images/car.png"
                     onerror="this.onerror=null; this.src='@Url.Content("~/images/avatar.jpg")'"
                     alt='image'
                     class="card-img" style="min-width: 300px; min-height: 300px; max-width: 300px; max-height: 300px; width: 300px; height: 300px"/>
                <div class="card-body">
                    <h5 class="card-title" style="color: black">
                        Car groups
                    </h5>

                    <a asp-action="Index"
                       asp-controller="CarGroup"
                       class="btn btn-outline-info">
                        More
                    </a>
                </div>
            </div>
            <div class="card m-2 p-1 col-4" style="max-width: 300px; max-height: 400px; width: 300px; height: 400px">
                <img src="~/images/user.png"
                     onerror="this.onerror=null; this.src='@Url.Content("~/images/avatar.jpg")'"
                     alt='image'
                     class="card-img" style="min-width: 300px; min-height: 300px; max-width: 300px; max-height: 300px; width: 300px; height: 300px"/>
                <div class="card-body">
                    <h5 class="card-title" style="color: black">
                        Users
                    </h5>

                    <a asp-action="Index"
                       asp-controller="Users"
                       class="btn btn-outline-info">
                        More
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>