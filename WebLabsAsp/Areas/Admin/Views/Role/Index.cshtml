@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<div class="scaffold">
    <h1>List of Roles</h1>
    <a asp-action="Create">Create</a>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
        </tr>
        </thead>
        <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }
        </tbody>
    </table>
    <style>
        a {
            font-size: 16px;
            text-decoration: none;
            color: #55ACEE;
        }
        a:hover {
            color: #007bd7;
        }
    </style>
</div>