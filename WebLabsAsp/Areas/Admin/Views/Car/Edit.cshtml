@using WebLabsAsp.Areas.Admin.Controllers
@model WebLabsAsp.Entities.Car

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var groups = (SelectList)ViewData["groups"];
    var input = ViewData["Input"] as CarController.InputModel;
}

<div class="scaffold">
    <h1>Edit</h1>

    <h4>Car</h4>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id"/>
                <div class="form-group">
                    <label asp-for="Brand" class="control-label"></label>
                    <input asp-for="Brand" class="form-control"/>
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="@input.ImageUpload.FormFile" type="file" accept="image/*" class="form-control"/>
                    <span asp-validation-for="@input.ImageUpload.FormFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CarGroupId"></label>
                    <select asp-for="CarGroupId" class="form-control" asp-items="@groups"></select>
                    <span asp-validation-for="CarGroupId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    <style>
        a {
            font-size: 16px;
            text-decoration: none;
            color: #55ACEE;
        }
        a:hover {
            color: #007bd7;
        }
    </style>
</div>