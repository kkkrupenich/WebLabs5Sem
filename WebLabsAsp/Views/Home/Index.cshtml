@{
    ViewBag.Title = "Main Page";
    Layout = "_Layout";
}

<main>
    
<section class="home">
    <h1>Shop</h1>
</section>

<section class="content">
    <h1>@ViewData["Text"]</h1>
    <h2>List</h2>
    <ol type="A" class="list">
        @for (int i = 1; i < 5; i++)
        {
            <li>@i list element</li>
        }
    </ol>
    <select asp-items="@ViewData["Lst"] as SelectList"></select>
    <hr>
    <form method="post">
        <div class="form-group row">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="checkBox" id="gridCheck1" value="check1">
                    Checkbox 1
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="checkBox" id="gridCheck2" value="check2">
                    Checkbox 2
                </div>
            </div>
        </div>
        <fieldset class="form-group">
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <div class="form-check-inline">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1">
                        Radio-1
                    </div>
                    <div class="form-check-inline">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                        Radio-2
                    </div>
                    <div class="form-check-inline">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option3">
                        Radio-3
                    </div>
                </div>
            </div>
        </fieldset>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">
                Login:
            </label>
            <div class="col-sm-10">
                <input type="email" class="form-control" name="email" id="inputEmail3" placeholder="Enter email">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="password" id="inputPassword3" placeholder="Enter password">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-outline-info">Send</button>
            </div>
        </div>
    </form>
</section>
</main>
