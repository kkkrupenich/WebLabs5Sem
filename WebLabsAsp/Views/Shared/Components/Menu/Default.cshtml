<div class="nav-items">
    @foreach (var item in Model)
    {
        @if (item.IsPage)
        {
            <a class="but" asp-area="@item.Area" asp-page="@item.Page">
                @item.Text
            </a>
        }
        else
        {
            <a class="but" asp-controller="@item.Controller" asp-action="@item.Action">
                @item.Text
            </a>
        }
    }
</div>